<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/order_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="我的订单"
                android:textColor="#fff"
                android:textSize="28sp" />
        </FrameLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/normal_order"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/wuliu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rounded_down_selectable"
            android:padding="10dp">

            <TextView
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物流查询"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/arrow" />

        </RelativeLayout>

        <TextView
            style="@style/TextView1"
            android:padding="8dp"
            android:text="订单收货信息"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rounded_down_selectable"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:id="@+id/orderId"
                style="@style/TextView1"
                android:text="订单号 :" />

            <TextView
                android:id="@+id/address"
                style="@style/TextView1"
                android:text="收货人地址 :" />

            <TextView
                android:id="@+id/orderTest"
                style="@style/TextView"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/orderName"
                style="@style/TextView"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/orderAddressArea"
                style="@style/TextView"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/orderAddressDetail"
                style="@style/TextView"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="订单详情"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rounded_down_selectable"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/statue"
                style="@style/TextView1"
                android:text="订单状态 :" />

            <TextView
                android:id="@+id/goods"
                style="@style/TextView1"
                android:text="送货方式 :" />

            <TextView
                android:id="@+id/pay"
                style="@style/TextView1"
                android:text="支付方式 :" />

            <TextView
                android:id="@+id/time"
                style="@style/TextView1"
                android:text="订单生成时间 :" />

            <TextView
                android:id="@+id/goods_time"
                style="@style/TextView1"
                android:text="发货时间 :" />

            <TextView
                android:id="@+id/ticket"
                style="@style/TextView1"
                android:text="是否开具发票 :" />

            <TextView
                android:id="@+id/Header"
                style="@style/TextView1"
                android:text="发票抬头 :" />

            <TextView
                android:id="@+id/advice"
                style="@style/TextView1"
                android:text="送货要求 :" />


        </LinearLayout>


        <TextView
            android:textSize="18sp"
            style="@style/TextView1"
            android:background="#d5cdcd"
            android:padding="0dp"
            android:text="商品清单 :" />

        <RelativeLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/goods_name"
                style="@style/TextView1"
                android:text="商品名称 :" />

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/goods_name"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="颜色 :"

                    />

                <TextView

                    android:id="@+id/size"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="尺码 :"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/count"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="数量 :"

                    />

                <TextView

                    android:id="@+id/price"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="价格 :"

                    />
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:background="#d5cdcd"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/goods_count"
                style="@style/TextView1"
                android:text="数量总数 :" />
            <TextView
                android:id="@+id/money"
                style="@style/TextView1"
                android:text="原始金额 :" />

            <TextView
                android:id="@+id/price1"
                style="@style/TextView1"
                android:text="运费 :" />


            <TextView
                android:id="@+id/goods_money"
                style="@style/TextView1"
                android:text="促销优惠金额 :" />


            <TextView
                android:id="@+id/goods_should"
                style="@style/TextView1"
                android:text="应付金额（不含运费） :" />


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button

            android:id="@+id/cancel_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/login_btn_selector"
            android:text="取消订单"
            android:textColor="#ffffff"
            android:textSize="22sp"
            />
    </LinearLayout>
    </LinearLayout>
</ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/no_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="对不起没有订单信息!!!"
            />
    </RelativeLayout>
</LinearLayout>