<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#22999999"
    android:orientation="horizontal">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_launcher" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <RelativeLayout
            android:id="@+id/rl_normal"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_good_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:singleLine="true"
                android:text="这是商品标题这是商品标题111111"
                android:textColor="#bb000000" />

            <RelativeLayout
                android:id="@+id/rl_first"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/tv_good_tittle">

                <TextView
                    android:id="@+id/tv_good_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="数量：1" />

                <TextView
                    android:id="@+id/tv_good_corlor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_good_num"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="颜色:红色" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_good_corlor"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="小计: ¥ 150.00" />
                />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@id/tv_good_tittle"
                android:layout_toRightOf="@id/rl_first">

                <TextView
                    android:id="@+id/tv_good_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="尺码：S" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_good_size"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="价格:160" />
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="6dp"
            android:text="编辑"
            android:textSize="16sp" />
        <RelativeLayout
            android:id="@+id/rl_edit"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#FF6600"
                android:gravity="center"
                android:text="删除"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/tv_delete">

                <TextView
                    android:id="@+id/tv_minus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tv_change_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="30sp" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>