<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<ImageView
    android:src="@drawable/ic_launcher"
    android:layout_width="100dp"
    android:layout_height="100dp" />
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="120dp">
        <TextView
            android:id="@+id/tv_good_tittle"
            android:textColor="#bb000000"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="这是商品标题这是商品标题111111"/>
        <RelativeLayout
            android:id="@+id/rl_first"
            android:layout_below="@id/tv_good_tittle"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/tv_good_num"
                android:layout_marginLeft="10dp"
                android:text="数量：1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_good_corlor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色:红色"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_good_num"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小计: ¥ 150.00"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_good_corlor"/> />
        </RelativeLayout>
        <RelativeLayout
            android:layout_toRightOf="@id/rl_first"
            android:layout_below="@id/tv_good_tittle"
            android:layout_width="100dp"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_good_size"
                android:layout_marginLeft="10dp"
                android:text="尺码：S"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格:160"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_good_size"/>
        </RelativeLayout>
        
    </RelativeLayout>
</LinearLayout>